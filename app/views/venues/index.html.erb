<div class="page-title">
  <div class="title_left">
    <h3>Venues</h3>
  </div>
</div>

<div class="clearfix"></div>

<div class="row">
  <div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
      <div class="x_title">
        <h2>Stadium List</h2>
        <div class="clearfix"></div>
      </div>
      <div class="x_content">
        <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
          <thead>
            <tr>
              <th>Venue Name</th>
              <th>Venue City</th>
              <th>Venue Country</th>
              <th>Stadium Size Category</th>
              <th colspan="3">Action</th>
            </tr>
          </thead>
          <tbody>
          <% @venues.each do |venue| %>            
            <tr>
              <td><%= venue.name %></td>
              <td><%= venue.city %></td>
              <td><%= venue.country %></td>
              <td><%= venue.ground_size %></td>
              <td><%= link_to 'Show', venue %></td>
              <td><%= link_to 'Edit', edit_venue_path(venue) %></td>
              <td><%= link_to 'Destroy', venue, method: :delete, data: { confirm: 'Are you sure?' } %></td>              
            </tr>
          <% end %>  
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<br>

<%= link_to 'Add New Venue', new_venue_path %>
