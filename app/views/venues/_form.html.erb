<%= javascript_include_tag 'venues' %>
<div class="clearfix"></div>
<div class="row">
  <div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
      <div class="x_content">
        <br />
        <%= form_with(model: venue, local: true, id: 'demo-form2', class: 'form-horizontal form-label-left') do |form| %>
          <% if venue.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(venue.errors.count, "error") %> prohibited this venue from being saved:</h2>

              <ul>
              <% venue.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
              </ul>
            </div>
          <% end %>        
          <div class="form-group">
            <label class="control-label col-xs-3" for="first-name">Name <span class="required">*</span>
            </label>
            <div class="col-md-6 col-sm-6 col-xs-12">
              <input type="text" name="venue[name]" id="name" required="required" class="form-control col-md-7 col-xs-12" value="<%= venue.name %>">
            </div>
          </div>

          <div class="form-group">
            <label for="middle-name" class="control-label col-md-3 col-sm-3 col-xs-12">Country</label>
            <div class="col-md-6 col-sm-6 col-xs-12">
            <select id="country" name="venue[country]"class="form-control" required>
              <option value="">Choose Country</option>
              <% @countries.each do |k,v| %>
                <option value=<%= k %> <% if k == venue.country.to_sym %> selected="selected" <% end %> > <%= v %></option>
              <% end %>
            </select>              
            </div>
          </div>


          <div class="form-group">
            <label for="middle-name" class="control-label col-md-3 col-sm-3 col-xs-12">City</label>
            <div class="col-md-6 col-sm-6 col-xs-12">
            <select id="city" name="venue[city]"class="form-control" required>
              <option value="">Select City</option>
              <% @cities.each do |city| %>
                <option value=<%= city %> <% if city == venue.city %> selected="selected" <% end %>> <%= city %></option>
              <% end %>
            </select>              
            </div>
          </div>

          <div class="form-group">
            <label class="control-label col-md-3 col-sm-3 col-xs-12">Ground Size</label>
            <div class="col-md-6 col-sm-6 col-xs-12">
              <div id="gender" class="btn-group" data-toggle="buttons">
                <label class="btn" data-toggle-class="btn-primary" data-toggle-passive-class="">
                  <input type="radio" name="venue[ground_size]" value="small" <% if venue.ground_size == 'small' %> checked="checked" <% end %> data-toggle-passive-class="btn-default"> &nbsp; Small &nbsp;
                </label>
                <label class="btn" data-toggle-class="btn-primary" data-toggle-passive-class="btn-default">
                  <input type="radio" name="venue[ground_size]" value="medium" <% if venue.ground_size == 'medium' %> checked="checked" <% end %>> Medium
                </label>
                <label class="btn" data-toggle-class="btn-primary" data-toggle-passive-class="btn-default">
                  <input type="radio" name="venue[ground_size]" value="big" <% if venue.ground_size == 'big' %> checked="checked" <% end %>> Big
                </label>                
              </div>
            </div>
          </div>
          <div class="ln_solid"></div>
          <div class="form-group">
            <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
              <button class="btn btn-primary" type="button">Cancel</button>
              <button class="btn btn-primary" type="reset">Reset</button>
              <button type="submit" class="btn btn-success">Submit</button>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>