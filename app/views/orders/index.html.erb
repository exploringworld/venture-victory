<p id="notice"><%= notice %></p>

<h1>Orders</h1>

<table>
  <thead>
    <tr>
      <th>Order type</th>
      <th>Odds type</th>
      <th>Invested amount</th>
      <th>Invested amount</th>
      <th>Refund amount</th>
      <th>Refund amount</th>
      <th>Result type</th>
      <th>Game</th>
      <th>Learning</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.order_type %></td>
        <td><%= order.odds_type %></td>
        <td><%= order.invested_amount %></td>
        <td><%= order.invested_amount %></td>
        <td><%= order.refund_amount %></td>
        <td><%= order.refund_amount %></td>
        <td><%= order.result_type %></td>
        <td><%= order.game_id %></td>
        <td><%= order.learning %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

