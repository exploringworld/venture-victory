<div class="page-title">
  <div class="title_left">
    <h3>Learnings & Tips</h3>
  </div>
</div>

<div class="clearfix"></div>

<div class="row">
  <div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
      <div class="x_title">
        <h2>Tips</h2>
        <div class="clearfix"></div>
      </div>
      <div class="x_content">
        <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
          <thead>
            <tr>
              <th>Name</th>
              <th>Description</th>
              <th>Validated times</th>
              <th>Importance</th>
              <th colspan="3">Action</th>
            </tr>
          </thead>
          <tbody>
          <% @learnings.each do |learning| %>            
            <tr>
              <td><%= learning.name %></td>
              <td><%= learning.description %></td>
              <td><%= learning.validated_times %></td>
              <td><%= learning.importance %></td>
              <td><%= link_to 'Edit', edit_learning_path(learning) %></td>
              <td><%= link_to 'Destroy', learning, method: :delete, data: { confirm: 'Are you sure?' } %></td>              
            </tr>
          <% end %>  
          </tbody>
        </table>


      </div>
    </div>
  </div>
</div>
<br>

<%= link_to 'New Learning', new_learning_path %>