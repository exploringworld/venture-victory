<div class="page-title">
  <div class="title_left">
    <h3>Series Listing</h3>
  </div>
</div>

<div class="clearfix"></div>

<div class="row">
  <div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
      <div class="x_title">
        <h2>Series List</h2>
        <div class="clearfix"></div>
      </div>
      <div class="x_content">
        <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
          <thead>
            <tr>
              <th>Name</th>
              <th>Start date</th>
              <th>Participant teams</th>
              <th>Winner team</th>
              <th colspan="3">Action</th>
            </tr>
          </thead>
          <tbody>
          <% @series.each do |series| %>            
            <tr>
              <td><%= series.name %></td>
              <td><%= series.start_date %></td>
              <td><%= series.participant_teams %></td>
              <td><%= series.winner_team %></td>
              <td><%= link_to 'Edit', edit_series_path(series) %></td>
              <td><%= link_to 'Destroy', series, method: :delete, data: { confirm: 'Are you sure?' } %></td>              
            </tr>
          <% end %>  
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<br>

<%= link_to 'Add New Series', new_series_path %>
