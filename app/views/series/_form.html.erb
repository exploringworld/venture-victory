<div class="clearfix"></div>
<div class="row">
  <div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
      <div class="x_content">
        <br />
        <%= form_with(model: series, local: true, id: 'demo-form2', class: 'form-horizontal form-label-left') do |form| %>
          <% if series.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(series.errors.count, "error") %> prohibited this series from being saved:</h2>

              <ul>
              <% series.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
              </ul>
            </div>
          <% end %>        
          <div class="form-group">
            <label class="control-label col-xs-3" for="first-name">Name <span class="required">*</span>
            </label>
            <div class="col-md-6 col-sm-6 col-xs-12">
              <input type="text" name="series[name]" id="name" required="required" class="form-control col-md-7 col-xs-12" value="<%= series.name %>">
            </div>
          </div>
          <div class="form-group">
            <label class="control-label col-md-3 col-sm-3 col-xs-12">Start Date</label>
            <div class="col-md-6 col-sm-6 col-xs-12">
              <input type="text" name="series[start_date]" id="start_date" required="required" class="form-control col-md-7 col-xs-12" value="<%= series.start_date %>">
            </div>
          </div>   

          <div class="form-group">
            <label class="control-label col-md-3 col-sm-3 col-xs-12">Participant Teams</label>
            <div class="col-md-9 col-sm-9 col-xs-12">
              <select class="select2_multiple form-control" multiple="multiple" name="series[participant_teams][]" id="participant_teams">
                <% @teams.each do |team| %>
                  <option value=<%= team.id %> <% if series.participant_teams.include? team.id.to_s %> selected="selected" <% end %> > <%= team.name %></option>
                <% end %>
              </select>
            </div>
          </div>

          <div class="form-group">
            <label class="control-label col-md-3 col-sm-3 col-xs-12">Winner Team</label>
            <div class="col-md-9 col-sm-9 col-xs-12">
              <select class="select2_multiple form-control" name="series[winner_team]" id="winner_team">
                <option value="">Select Winning Team </option>
                <% @teams.each do |team| %>
                  <option value=<%= team.id %> <% if series.winner_team == team.id %> selected="selected" <% end %>  > <%= team.name %></option>
                <% end %>
              </select>
            </div>
          </div>

          <div class="checkbox">
            <label>
              <input type="hidden" name="series[completed]" value=0 >
              <input type="checkbox" name="series[completed]" value=1 <% if series.completed %> checked='checked' <% end %>> Series Completed
            </label>
          </div>          
              
          <div class="ln_solid"></div>
          <div class="form-group">
            <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
              <button class="btn btn-primary" type="button">Cancel</button>
              <button class="btn btn-primary" type="reset">Reset</button>
              <button type="submit" class="btn btn-success">Submit</button>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>